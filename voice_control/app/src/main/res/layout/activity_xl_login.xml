<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/login_bg"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/iv_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="70dp"
        android:src="@mipmap/logo" />

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:text="湘远慧生活"
        android:textColor="@color/green_00B450"
        android:textSize="28sp" />

    <LinearLayout
        android:id="@+id/ll_account"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="32dp"
        android:background="@mipmap/zhanghaobeijing"
        android:orientation="horizontal"
        android:padding="1dp">

        <TextView
            android:visibility="gone"
            android:textSize="14sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="9dp"
            android:layout_marginRight="9dp"
            android:text="账号"
            android:textColor="@color/gray_A7A7A7" />

        <EditText
            android:paddingLeft="10dp"
            android:id="@+id/et_account"
            android:singleLine="true"
            android:layout_width="wrap_content"
            android:layout_weight="1.0"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:background="@color/c_white_ffffff"
            android:gravity="center_vertical"
            android:layout_marginLeft="35dp"
            android:textColor="@color/black_242549"
            android:textSize="16sp" />
        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/ll_select"
            android:layout_width="30dp"
            android:layout_height="match_parent"></LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="5dp"
        android:background="@mipmap/mimashurkuang"
        android:orientation="horizontal"
        android:padding="1dp">

        <TextView
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="9dp"
            android:layout_marginRight="9dp"
            android:textSize="14sp"
            android:text="密码"
            android:textColor="@color/gray_999999" />

        <EditText
            android:id="@+id/et_psw"
            android:layout_width="200dp"
            android:singleLine="true"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:background="@color/c_white_ffffff"
            android:gravity="center_vertical"
            android:inputType="textPassword"
            android:layout_marginLeft="40dp"
            android:textColor="@color/black_242549"
            android:textSize="16sp" />
    </LinearLayout>
    <LinearLayout
        android:layout_marginLeft="45dp"
        android:layout_marginRight="50dp"
        android:layout_marginTop="9dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <CheckBox
            android:textColor="@color/gray_999999"
            android:id="@+id/cb_remember_pwd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/dd_selector_cb"
            android:drawablePadding="5dp"
            android:textSize="11sp"
            android:text="记住密码"
            android:checked="true"
            android:button="@null" />
        <CheckBox
            android:textColor="@color/gray_999999"
            android:layout_marginLeft="20dp"
            android:id="@+id/cb_auto_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/dd_selector_cb"
            android:drawablePadding="5dp"
            android:text="自动登录"
            android:textSize="11sp"
            android:button="@null" />
        <TextView
            android:layout_marginLeft="10dp"
            android:textColor="@color/black_262626"
            android:gravity="right"
            android:layout_weight="1"
            android:id="@+id/tv_register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="11sp"
            android:visibility="gone"
            android:text="注册" />
        <TextView
            android:visibility="gone"
            android:textColor="@color/black_262626"
            android:layout_marginLeft="22dp"
            android:id="@+id/tv_forget_pwd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="11sp"
            android:text="忘记密码？" />
    </LinearLayout>
    <LinearLayout
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Button
            android:textColor="@color/c_white_ffffff"
            android:text="登录"
            android:id="@+id/btn_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="29dp"
            android:background="@drawable/dd_selector_btn_login" />

    </LinearLayout>


</LinearLayout>